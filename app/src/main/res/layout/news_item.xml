<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_item_RL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_news_item"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_selector_light">

        <RelativeLayout
            android:id="@+id/news_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_topic"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/iv_title"
                android:text="如何看待当下这种越来越普遍的“沉默”人格？"
                android:textColor="@color/dark_news_item"
                android:textSize="16dp" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
